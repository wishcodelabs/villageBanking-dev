<MudDialog>
    <DialogContent>
        <EditForm Model="@Model" OnValidSubmit="Submit" OnInvalidSubmit="ModelInvalid">
            <FluentValidationValidator/>
             <DataAnnotationsValidator/>
             <MudGrid Spacing="3" Justify="Justify.SpaceBetween">
                 <MudItem xs="12" sm="6">
                     <MudDatePicker @bind-Date="Model.BeginDate" 
                                    Label="Start Date" 
                                    Rounded="true"
                                    Elevation="20"
                                    Required="true"
                                    /> 
                    
                 </MudItem>
                 <MudItem xs="12" sm="6">
                     <MudDatePicker @bind-Date="Model.EndDate" 
                                    Label="End Date" 
                                    Rounded="true"
                                    Elevation="20"
                                    Required="true"
                                    /> 
                 </MudItem>
                 <MudItem xs="12" sm="6">
                     <MudTextField Label="" @bind-Value="Model.MinAmount" T="decimal"/>
                 </MudItem>
                 <MudItem xs="12" sm="6"></MudItem>
             </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
      
            <MudButton OnClick="Cancel">Cancel</MudButton>
       
        <MudButton StartIcon="@Icons.Material.Filled.Save" Color="Color.Success" Variant="Variant.Filled" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>
